{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2018",
        "module": "commonjs",
        "sourceMap": true,
        "allowJs": true,
        "rootDir": "src",
        "outDir": "dst",
        "lib": [
            "es2018",
            "dom"
        ],
        "strictNullChecks": true,
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "formatCodeOptions": {
        "indentSize": 2
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts",
        "test/*.ts",
        "test/**/*.ts"
    ]
}
